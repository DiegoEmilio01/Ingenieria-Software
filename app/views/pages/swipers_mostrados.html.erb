<h1>Lista de putos</h1>
<% i = 0 %>
<% @swipers_recomendados.each do |swiper| %>
  <% if (i == 0) %>
    <div class ="first current">  
  <% elsif (i == @swipers_recomendados.length() - 1)%>
    <div class="last" style="display:none;"> 
  <% else %>
    <div class="box" style="display:none;">
  <% end %>
    <article class="media">
          <p>
            <strong><%= swiper.nombre %></strong> <small><%= swiper.edad %></small>
            <br>
            <div class="imagenes">
              <% img = 0 %>
              <% swiper.imagenes.each do |imagen| %>
                    <% if (img == 0) %>
                      <div class="first_foto current_foto" style="width:200px; height:200px;">
                    <% elsif (img == swiper.imagenes.length() - 1) %>
                      <div class="last_foto" style="width:200px; height:200px;display:none;">
                    <% else %>
                      <div class="foto" style="width:200px; height:200px;display:none;">
                    <% end %>
                        <%= image_tag(imagen, style:'width:200px; heigth: 100px') %>
                      </div>
                    <% img += 1 %>
              <% end %>
              <button class="next_foto">Next Image</button><br>
            </div>
            <%= swiper.descripcion %>
          </p>
          <%= link_to 'Ver mÃ¡s', swiper_path(swiper.id), class: 'button' %><br>
          <%= link_to 'Aceptar', aceptado_path(@swiper.id, swiper.id), class: 'button' %>
    </article>
  </div>
  <% i += 1 %>
<% end %>
<button class="next">Next Swiper</button><br>
<%= link_to "Home", home_root_path%>
<script>
  $('.next').click(function() {
    $('.current').removeClass('current').hide()
        .next().show().addClass('current');
    if ($('.current').hasClass('last')) {
        $('.next').attr('disabled', true);
    }
  });
  
  $('.next_foto').click(function() {
    if ($('.current_foto').hasClass('last_foto')) {
      $('.current_foto').removeClass('current_foto').hide();
      $('.first_foto').addClass('current_foto').show().focus();
    } else {
    $('.current_foto').removeClass('current_foto').hide()
        .next().show().addClass('current_foto');
    }
  });

