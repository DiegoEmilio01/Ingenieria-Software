<p id="notice"><%= notice%></p>

<p>
    <strong>Nombre</strong>
    <%= @swiper.nombre %>
</p>

<p>
    <strong>Email</strong>
    <%= @swiper.email%>
</p>

<p>
    <strong>Edad</strong>
    <%= @swiper.edad%>
</p>

<p>
    <strong>Cumpleaños</strong>
    <%= @swiper.cumpleanos.strftime("%d/%m")%>
</p>

<p>
    <strong>Teléfono</strong>
    <%= @swiper.telefono%>
</p>

<p>
    <strong>Dirección</strong>
    <%= @swiper.direccion%>
</p>

<p>
    <strong>Descripción</strong>
    <%= @swiper.descripcion%>
</p>

<br>

<table>
    <thead>
        <tr>
            <% (0...@swiper.imagenes.count).each do |numero| %>
                <th>Imagen <%= numero + 1 %> </th>
            <% end %>
        </tr>
      </thead>
    <tbody>
        <tr>
            <% @swiper.imagenes.each do |imagen| %>
            <td>
                <div style="width:200px; height:300px;">
                    <%= image_tag(imagen, style:'width:150px; heigth: 100px') %>
                </div>
            </td>
            <% end %>
        </tr>
    </tbody>
</table>

<br>

<%= link_to "Lista swipers", lista_swipers_path %><br>