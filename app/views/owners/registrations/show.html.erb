<% if current_admin or current_owner%>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Owner:</strong>
    <%= @owner.nombre %>
  </p>
  <p>
    <strong>Correo:</strong>
    <%= @owner.email%>
  </p>
  <br>
  <% if current_admin %>
    <%= link_to 'Editar Owner', admin_edit_owner_path(@owner.id) %><br>
    <br>
    <%= link_to "Volver a lista de Owners", lista_owners_path %><br>
  <% end %>

  <% if current_owner %>
    <%= link_to "Cerrar sesión", destroy_owner_session_path, method: :delete, data: {confirm: '¿Estás seguro que quieres cerrar sesión?'}  %><br><br>
    <%= link_to 'Editar Owner logueado', edit_owner_registration_path %><br><br>
    <%= link_to "Borrar Owner logueado", registration_path(resource_name), data: { confirm: "Estás seguro" }, method: :delete %><br><br>
  <% end %>
<% else %>
  <% controller.redirect_to new_admin_session_path, notice: 'No tienes permiso para ingresar a la página que intentaste acceder.' %>
<% end %>