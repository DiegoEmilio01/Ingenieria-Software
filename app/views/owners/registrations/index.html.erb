<p id="notice"><%= notice %></p>
<h1>Lista de Owners</h1>
<table>
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Email</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <%@owners.each do |owner| %>
    <tr>
      <td><%= owner.nombre %></td>
      <td><%= owner.email %></td>
      <td><%= link_to 'Ver detalles', owner_path(owner.id) %></td>
    </tr>
  <%end%>
  </tbody>
</table>
<br>

<% if current_owner %>
  <p>Hola, <%= current_owner.nombre %></p>
  <%= link_to "Cerrar sesión", destroy_owner_session_path, method: :delete, data: {confirm: '¿Estás seguro que quieres cerrar sesión?'}  %><br><br>
  <%= link_to 'Editar Owner logueado', edit_owner_registration_path %><br><br>
  <%= link_to "Borrar Owner logueado", registration_path(resource_name), data: { confirm: "Estás seguro" }, method: :delete %><br><br>
  <%= link_to 'Volver a la lista de Cruds disponibles', destroy_owner_session_path, method: :delete, data: {confirm: '¿Estás seguro que quieres volver a la lista de cruds?' + "\n" + 'Se cerrará tu sesión.'}  %>
<% else %>
  <%= link_to 'Loguearse como Owner', new_owner_session_path %><br><br>
  <%= link_to 'Crear Owner', new_owner_registration_path %><br><br>
  <%= link_to 'Volver a la lista de Cruds disponibles', lista_cruds_path %><br>
<% end%>
