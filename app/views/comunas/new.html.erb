<p id="notice"><%= notice %></p>

<h1>Nueva Comuna</h1>

<%= form_with(model: @comuna, method: :post) do |form| %>
    <div class="field">
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
    </div>
    <div class="field">
        <%= form.label :cuarentena %>
        <%= form.select :cuarentena, options_for_select(["true", "false"]) %>
    </div>
    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>