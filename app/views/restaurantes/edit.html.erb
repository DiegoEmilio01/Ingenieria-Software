<p id="notice"><%= notice %></p>

<h1>Editar Restaurante</h1>

<%= form_with(model: @restaurante, method: :patch) do |form| %>
    <div class="field">
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
    </div>
    <div class="field">
        <%= form.label :descripcion %>
        <%= form.text_field :descripcion %>
    </div>
    <div class="field">
        <%= form.label :valoracion %>
        <%= form.text_field :valoracion %>
    </div>
    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>

<% @restaurante.imagenes.each do |imagen| %>
<div style="width:300px; height:300px;"></div>
    <%= image_tag(imagen, style:'width:100%; height: auto') %>
</div>
<% end %>

<br>

<%= link_to 'Lista Restaurantes', lista_restaurantes_path %>