<% if current_admin %>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Nombre:</strong>
    <%= @comuna.nombre %>
  </p>

  <p>
    <strong>Cuarentena:</strong>
    <%= @comuna.cuarentena %>
  </p>

  <p>
    <strong>Número de Restaurantes:</strong>
    <%= @comuna.restaurantes.length %>
  </p>

  <p>
    <strong>Número de Swipers:</strong>
    <%= @comuna.swipers.length %>
  </p>

  <br>

  <%= link_to 'Lista Comunas', lista_comunas_path %><br>
  <%= link_to 'Editar Comuna', edit_comuna_path(@comuna.id) %><br>
  <%= link_to 'Eliminar Comuna', comuna_path(@comuna.id), method: :delete, data: {confirm: '¿Estás seguro?'} %><br>
<% else %>
  <% controller.redirect_to new_admin_session_path, notice: 'No tienes permiso para ingresar a la página que intentaste acceder.' %>
<% end %>